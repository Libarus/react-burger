{
    "singleQuote": true,
    "semi": true,
    "arrowParens": "avoid",
    "bracketSameLine": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "printWidth": 150,
    "useTabs": false,
	"jsxSingleQuote": true,
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^@/app/(.*)$",
		"^@/features/(.*)$",
		"^@/shared/(.*)$",
		"^../(.*)$",
		"^./(.*)$"
	],
	"plugins": [
		"@trivago/prettier-plugin-sort-imports"
	]
} 